{
  "name": "cloudchef-print-agent",
  "version": "1.1.2",
  "description": "CloudChef Print Agent - Desktop приложение для печати этикеток",
  "main": "out/main/main.js",
  "author": "CloudChef Team",
  "license": "MIT",
  "private": true,
  "homepage": "./",
  "scripts": {
    "dev": "tsc && tsc -p tsconfig.renderer.json && mkdir -p out/renderer && cp src/renderer/index.html out/renderer/index.html && electron out/main/main.js",
    "build": "tsc && tsc -p tsconfig.renderer.json && mkdir -p out/renderer && cp src/renderer/index.html out/renderer/index.html",
    "preview": "electron-vite preview",
    "electron:pack": "npm run build && electron-builder",
    "electron:dist": "npm run build && electron-builder --publish=never",
    "electron:publish": "npm run build && electron-builder --publish=always",
    "release:patch": "npm version patch && git push origin --tags",
    "release:minor": "npm version minor && git push origin --tags",
    "release:major": "npm version major && git push origin --tags",
    "postinstall": "electron-builder install-app-deps",
    "test:first-run": "node test-first-run.js"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "auto-launch": "^5.0.6",
    "electron-log": "^5.0.3",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.7",
    "pdf-to-printer": "^5.6.1",
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "@types/auto-launch": "^5.0.5",
    "@types/node": "^20.10.5",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^30.5.1",
    "electron-builder": "^24.9.1",
    "electron-vite": "^4.0.1",
    "html-webpack-plugin": "^5.6.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "vite": "^7.1.9",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.cloudchef.printagent",
    "productName": "CloudChef Print Agent",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*",
      "assets/**/*",
      "app-update.yml"
    ],
    "extraResources": [
      {
        "from": "app-update.yml",
        "to": "app-update.yml"
      },
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "CloudChef Team",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": true,
      "shortcutName": "CloudChef Print Agent"
    },
    "publish": {
      "provider": "github",
      "owner": "mosu1985",
      "repo": "cloudchef-print-agent",
      "releaseType": "release"
    }
  }
}
